---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Hubungi</Fragment>
      <Fragment slot="desc">We are here to help.</Fragment>
    </Sectionhead>

    <div class="mx-auto max-w-6xl my-16 px-4">
      <div class="flex flex-col md:flex-row gap-10">
        {/* Map Section */}
        <div
          class="w-full md:w-1/2 p-4 rounded-lg hover:border hover:shadow-lg transition-all duration-300">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3576.957998213144!2d110.36529307455464!3d-7.824998677718522!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e7a5926b951619f%3A0x1e5e08ffddad21c6!2sLife%20Media!5e1!3m2!1sid!2sid!4v1736261798413!5m2!1sid!2sid"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        {/* Contact Information Section */}
        <div
          class="w-full md:w-1/2 flex-1 md:px-4 p-4 rounded-lg hover:border hover:shadow-md transition-all duration-300">
          <h2
            class="font-medium text-2xl text-gray-800 text-center md:text-left">
            Hubungi Kami
          </h2>
          <p
            class="text-lg leading-relaxed text-slate-500 mt-3 text-center md:text-left">
            Have something to say? We are here to help. Fill up the form or send
            email or call phone.
          </p>

          {/* Contact Details */}
          <div class="mt-5 space-y-3">
            <div class="flex items-start space-x-2 text-gray-600">
              <Icon
                class="text-gray-400 w-6 h-6 mt-1 flex-shrink-0"
                name="uil:map-marker"
              />
              <span>
                Jl. Parangtritis 97, RT 57 RW 15, Brontokusuman, Mergangsan, DI
                Yogyakarta 55153
              </span>
            </div>

            <div class="flex items-center space-x-2 text-gray-600">
              <Icon
                class="text-gray-400 w-6 h-6 flex-shrink-0"
                name="uil:envelope"
              />
              <a href="mailto:eksan@jdnusantara.co.id">
                eksan@jdnusantara.co.id
              </a>
            </div>

            <div class="flex items-center space-x-2 text-gray-600">
              <Icon
                class="text-gray-400 w-6 h-6 flex-shrink-0"
                name="uil:phone"
              />
              <span>+62 123 456 789</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>

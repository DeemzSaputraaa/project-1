---
// @ts-ignore
import { Icon } from "astro-icon/components";
---

<div class="bg-textJudul text-white py-6 overflow-hidden">
  <div class="mt-24 max-w-screen-xl mx-auto py-2">
    <h2 class=" text-2xl lg:text-3xl text-center font-bold lg:tracking-tight">
      Partnership
    </h2>
    <div class="relative w-full">
      <div 
        class="partnership-slider flex gap-8 md:gap-20 items-center justify-center mt-10"
        style="animation: slide 15s linear infinite;">
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:react" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:svelte" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:astro" />
        <Icon class="size-8 md:size-16 flex-shrink-0" name="simple-icons:tailwindcss" />
        <Icon class="size-8 md:size-16 flex-shrink-0" name="simple-icons:linux" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:vercel" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:github" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:laragon" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:postgresql" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:gitlab" />
        
        {/* Duplicate the icons for a seamless infinite scroll */}
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:react" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:svelte" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:astro" />
        <Icon class="size-8 md:size-16 flex-shrink-0" name="simple-icons:tailwindcss" />
        <Icon class="size-8 md:size-16 flex-shrink-0" name="simple-icons:linux" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:vercel" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:github" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:laragon" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:postgresql" />
        <Icon class="size-8 md:size-12 flex-shrink-0" name="simple-icons:gitlab" />
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes slide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .partnership-slider {
    display: inline-flex;
    width: max-content;
  }

  .partnership-slider:hover {
    animation-play-state: paused;
  }
</style>


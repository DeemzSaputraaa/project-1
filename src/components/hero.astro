---
import { Picture } from "astro:assets";
import heroImage from "assets/hero2.png";
import Link from "@components/ui/link.astro";
---

<main class="bg-textJudul text-white">
  <div
    class="grid lg:grid-cols-2 place-items-center pt-8 md:pt-0 max-w-7xl mx-auto px-3 animate-fade-in">
    <div class="w-full md:order-1">
      <Picture
        src={heroImage}
        alt="orang"
        widths={[1400, 1800, 2200]}
        sizes="(max-width: 2200px) 100vw, 2200px"
        loading="eager"
        format="avif"
        class="hidden md:block lg:block w-full h-auto object-cover md:scale-100"
      />
      <Picture
        src={heroImage}
        alt="orang"
        widths={[500, 600, 700]}
        sizes="(max-width: 700px) 100vw, 700px"
        loading="eager"
        format="avif"
        class="block md:hidden lg:hidden w-full h-auto object-cover mb-6 scale-100"
      />
    </div>

    <div class="text-center md:text-left px-4">
      <div
        class="project-header relative z-10 mx-auto max-w-[1244px] px-5 sm:px-12 md:px-16 lg:px-12 xl:px-4">
        <h2
          id="title-highlighed-projects"
          class="relative inline text-3xl sm:text-4xl md:text-5xl lg:text-[64px] font-bold tracking-tight text-cyan-dark sm:leading-150">
          <span
            id="title-highlighed-projects-rocket"
            style={{ transform: "translate(-150%, 150%)", opacity: 0 }}
            class="block sm:inline-block">ðŸš€</span
          >
          <span class="relative mt-2 inline-block sm:mt-0">
            <span class="relative z-[1]">PT. JARING DATA NUSANTARA</span>
            <span
              id="title-highlight-project"
              style={{ width: 0 }}
              class="title-highlight absolute left-0 -bottom-1 z-0 hidden h-[15px] w-[250px] max-[350px]:w-[220px] min-[375px]:block sm:bottom-2 sm:w-[320px] md:bottom-1 lg:h-[20px] lg:w-[600px]"
            ></span>
          </span>
        </h2>

        <p
          class="mt-6 max-w-[730px] text-lg sm:text-xl !leading-150 text-white">
          "Connected Business, Smart Solution. CLEON by JDN - Your Digital
          Partner."
        </p>
      </div>

      <div
        class="mt-6 flex flex-col sm:flex-row gap-3 justify-center md:justify-start">
        <Link
          style="muted"
          href="/contact"
          target="_self"
          class="flex gap-1 text-textJudul items-center justify-center hover:scale-105 transition-transform duration-300"
          rel="noopener">
          <svg
            class="w-6 h-6"
            fill="FFFFFF"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg">
            <path
              d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
              fill="#3D5A80"></path>
            <path
              d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
              fill="#3D5A80"></path>
          </svg>
          Kerja Sama dengan JDN
        </Link>
      </div>
    </div>
  </div>
</main>

<script>
  import { animate, inView } from "motion";

  const defaultEasing = [0.17, 0.55, 0.55, 1];

  inView("#title-highlighed-projects", () => {
    animate(
      "#title-highlight-project",
      { opacity: 1, width: "100%" },
      { delay: 0.3 }
    );
    animate(
      "#title-highlighed-projects-rocket",
      { opacity: 1, transform: "translate(0, 0)" },
      { duration: 0.8, delay: 0.5 }
    );
    animate("#mesh-project-section-top", { opacity: 1 }, { delay: 0.5 });
    animate("#mesh-project-section-bottom", { opacity: 1 }, { delay: 0.5 });
  });
</script>

<style>
  .title-highlight {
    background:
      radial-gradient(
          75.3% 65106.57% at 1.06% -86.9%,
          rgba(12, 80, 105, 0.2) 0%,
          rgba(12, 74, 110, 0) 100%
        )
        /* warning: gradient uses a rotation that is not supported by CSS and may not behave as expected */,
      linear-gradient(89.96deg, #91dafc -0.07%, rgba(145, 218, 252, 0) 113.39%);
    transform: rotate(-1.13deg);
  }

  @media (max-width: 640px) {
    .title-highlight {
      background:
        radial-gradient(
            75.3% 65106.57% at 1.06% -86.9%,
            rgba(12, 80, 105, 0.2) 0%,
            rgba(12, 74, 110, 0) 100%
          )
          /* warning: gradient uses a rotation that is not supported by CSS and may not behave as expected */,
        linear-gradient(
          89.96deg,
          #beebff -0.07%,
          rgba(145, 218, 252, 0) 113.39%
        );
      transform: rotate(-1.13deg);
    }

    .project-header::before {
      content: "";
      position: absolute;
      top: -300px;
      left: 0;
      width: 100%;
      height: 450%;
      opacity: 40%;
      background:
        radial-gradient(
            78.47% 16.24% at 0% 39.21%,
            rgba(221, 214, 254, 0.44) 0%,
            rgba(217, 217, 217, 0) 100%
          )
          /* warning: gradient uses a rotation that is not supported by CSS and may not behave as expected */,
        radial-gradient(
          77.5% 23.35% at -3.06% 47.79%,
          rgba(14, 165, 233, 0.294) 0%,
          rgba(217, 217, 217, 0) 100%
        );
      z-index: -1;
    }
  }
</style>
